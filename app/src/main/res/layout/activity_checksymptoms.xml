<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    >

    <CheckBox
        android:id="@+id/symp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/fever"
        android:textSize="20dp" />


    <CheckBox
        android:id="@+id/symp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/shivering"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/symp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/weakness"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/symp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/yellow_eyes"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/symp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="@string/chill"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/symp6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/headache"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/symp7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/watery_stool"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/symp8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/dark_colored_urine"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/symp9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/skin_itch"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/check"
        android:textSize="20dp" />

</LinearLayout>